{
  "type": "record",
  "name": "RawIdea",
  "namespace": "com.datamesh.agent.ideation",
  "doc": "Raw data product ideas generated by the Learning Agent based on current state analysis",
  "fields": [
    {
      "name": "timestamp",
      "type": "string",
      "doc": "ISO 8601 timestamp of when this idea was generated"
    },
    {
      "name": "idea_id",
      "type": "string",
      "doc": "Unique identifier for this idea (UUID)"
    },
    {
      "name": "title",
      "type": "string",
      "doc": "Short, descriptive title for the data product idea"
    },
    {
      "name": "description",
      "type": "string",
      "doc": "Detailed explanation of the proposed data product and its value"
    },
    {
      "name": "domain",
      "type": "string",
      "doc": "Primary domain this data product belongs to (e.g., 'gaming', 'e-commerce', 'fleet-management')"
    },
    {
      "name": "related_topics",
      "type": {
        "type": "array",
        "items": "string"
      },
      "doc": "List of topic names that would be part of this data product"
    },
    {
      "name": "reasoning",
      "type": "string",
      "doc": "AI-generated reasoning explaining why this data product makes sense based on current state"
    },
    {
      "name": "potential_users",
      "type": {
        "type": "array",
        "items": "string"
      },
      "default": [],
      "doc": "Potential user personas or teams who would benefit from this data product"
    },
    {
      "name": "estimated_complexity",
      "type": {
        "type": "enum",
        "name": "Complexity",
        "symbols": ["LOW", "MEDIUM", "HIGH", "VERY_HIGH"]
      },
      "default": "MEDIUM",
      "doc": "Initial complexity estimate before detailed evaluation"
    },
    {
      "name": "confidence_score",
      "type": "float",
      "default": 0.5,
      "doc": "Agent's confidence in this idea (0.0 to 1.0)"
    },
    {
      "name": "status",
      "type": {
        "type": "enum",
        "name": "IdeaStatus",
        "symbols": ["RAW", "REFINED", "APPROVED", "REJECTED"]
      },
      "default": "RAW",
      "doc": "Current status of this idea in the workflow"
    }
  ]
}
